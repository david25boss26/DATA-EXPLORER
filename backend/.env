# Database Configuration
DUCKDB_PATH=./data/database.duckdb

# LLM Configuration
LLM_MODEL=llama2:7b-chat  # Example: llama2:7b-chat for Ollama
LLM_PROVIDER=ollama  # Options: ollama, openai, mock, local
LLM_BASE_URL=http://localhost:11434  # Ollama default base URL

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads

# Public Data APIs
ENABLE_PUBLIC_APIS=true